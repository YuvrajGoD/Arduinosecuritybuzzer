#define trigPin 6
#define echoPin 7
#define buzzerPin 8

void setup() {
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  pinMode(buzzerPin, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  long duration;
  int distance;

  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  duration = pulseIn(echoPin, HIGH);
  distance = duration * 0.034 / 2;

  Serial.print("Distance: ");
  Serial.println(distance);

  if (distance > 15) {
    // Police siren effect for passive buzzer
    for (int i = 440; i <= 1000; i += 20) {
      tone(buzzerPin, i);
      delay(10);
    }
    for (int i = 1000; i >= 440; i -= 20) {
      tone(buzzerPin, i);
      delay(10);
    }
  } else {
    noTone(buzzerPin);
  }

  delay(200);
}
"""

# Create directory and save code as .ino file
project_dir = "/mnt/data/PassiveBuzzerPoliceSiren"
os.makedirs(project_dir, exist_ok=True)
ino_file_path = os.path.join(project_dir, "PassiveBuzzerPoliceSiren.ino")

with open(ino_file_path, "w") as file:
    file.write(arduino_code)

# Zip the folder for download
zip_path = "/mnt/data/PassiveBuzzerPoliceSiren.zip"
with ZipFile(zip_path, "w") as zipf:
    zipf.write(ino_file_path, arcname="PassiveBuzzerPoliceSiren/PassiveBuzzerPoliceSiren.ino")

